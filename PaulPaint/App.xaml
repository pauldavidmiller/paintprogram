<Application x:Class="PaulPaint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PaulPaint"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BitmapImage x:Key="select" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/mousepointer.jpg"/>
        <BitmapImage x:Key="thickness1" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/dot1.jpg"/>
        <BitmapImage x:Key="thickness2" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/dot2.png"/>
        <BitmapImage x:Key="thickness3" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/dot3.png"/>
        <BitmapImage x:Key="newCanvas" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/white.jpg"/>
        <BitmapImage x:Key="mainIcon" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/Images/imageeditor.ico"/>
    </Application.Resources>
</Application>
